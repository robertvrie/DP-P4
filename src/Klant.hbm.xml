<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="hu.nl.hibernate.KlantDetails" table="KLANT">
        <meta attribute = "class-description">
            This class contains the Klant detail
        </meta>

        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <property name="voornaam" column="voornaam" type="string"/>
        <property name="tussenvoegsel" column="tussenvoegsel" type="string"/>
        <property name="achternaam" column="tussenvoegsel" type="string"/>
    </class>
</hibernate-mapping>